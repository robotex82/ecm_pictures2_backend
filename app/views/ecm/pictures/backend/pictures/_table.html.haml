= table.association :gallery, sortable: true
= table.column(:preview_picture) do |picture|
  %img.img-responsive.bottom-margin-2{ src: picture.image.url(:default_thumb) }
= table.column :name, class: 'truncate-chars truncate-chars-30', sortable: true
= table.column :description, class: 'truncate-chars truncate-chars-30', sortable: true
